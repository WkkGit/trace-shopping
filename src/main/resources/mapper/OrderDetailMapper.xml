<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wkk.mapper.OrderDetailMapper">
    <resultMap id="BaseResultMap" type="com.wkk.pojo.BO.OrderDetail">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <id column="delivery_no" property="deliveryNo" jdbcType="VARCHAR"/>
        <id column="user_account" property="userAccount" jdbcType="INTEGER"/>
        <id column="produce_name" property="produceName" jdbcType="VARCHAR"/>
        <id column="produce_price" property="producePrice" jdbcType="DOUBLE"/>
        <id column="quantity" property="quantity" jdbcType="INTEGER"/>
        <id column="total_price" property="totalPrice" jdbcType="DOUBLE"/>
        <id column="created_at" property="createdAt" jdbcType="VARCHAR"/>
        <id column="updated_at" property="updatedAt" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="tb">order_detail</sql>
    <sql id="Base_Column_List">
        id, delivery_no, user_account, produce_name, produce_price, quantity, total_price , created_at, updated_at
    </sql>

    <insert id="insert" parameterType="com.wkk.pojo.BO.OrderDetail" useGeneratedKeys="true" keyProperty="id">
        insert into
        <include refid="tb"/>
        (delivery_no, user_account, produce_name, produce_price, quantity, total_price , created_at, updated_at)
        values (#{deliveryNo}, #{userAccount}, #{produceName}, #{producePrice}, #{quantity}, #{totalPrice}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update" parameterType="com.wkk.pojo.BO.OrderDetail">
        update
        <include refid="tb"/>
        <set>
            <if test="delivery_no != null">delivery_no = #{deliveryNo},</if>
            <if test="user_account != null">user_account = #{userAccount},</if>
            <if test="produce_name != null">produce_name = #{produceName},</if>
            <if test="produce_price != null">produce_price = #{producePrice},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="total_price != null">total_price = #{totalPrice},</if>
            <if test="updated_at != null">updated_at = #{updatedAt}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteByDeliveryNo">
        delete from <include refid="tb"/>
        where delivery_no = #{deliveryNo}
    </delete>

    <delete id="deleteById">
        delete from <include refid="tb"/>
        where id = #{id}
    </delete>

    <delete id="deleteBatch">
        delete from <include refid="tb"/>
        where delivery_no in
        <foreach item="deliveryNo" collection="deliveryNos" open="(" close=")" separator=",">
            #{deliveryNo}
        </foreach>
    </delete>

    <select id="findByUserAccount" resultType="com.wkk.pojo.BO.OrderDetail">
        select <include refid="Base_Column_List"/> from <include refid="tb"/> where user_account = #{userAccount}
    </select>

    <select id="findByDeliveryNo" resultType="com.wkk.pojo.BO.OrderDetail">
        select <include refid="Base_Column_List"/> from <include refid="tb"/> where delivery_no = #{deliveryNo}
    </select>

    <select id="list" resultType="com.wkk.pojo.BO.OrderDetail">
        select <include refid="Base_Column_List"/> from <include refid="tb"/>
    </select>
</mapper>
